#!/bin/bash

BACKUP_DIR=/home/deepak/dropbox/aasaan/database-backups
TODAY=$(date +\%Y-\%m-\%d)
BACKUP_FILE=$BACKUP_DIR/aasaan_db_$TODAY.dat
docker exec -it aasaan_db -U aasaan -d aasaan pg_dump > $BACKUP_FILE
BACKUP_FILE_ARCHIVE=${BACKUP_FILE}.gz
tar -czf ${BACKUP_FILE_ARCHIVE} ${BACKUP_FILE}
rm ${BACKUP_FILE}
